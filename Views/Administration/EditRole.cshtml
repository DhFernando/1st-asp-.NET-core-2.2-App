@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}
    

    <div class="row">
        <div class="col-12">
            <div class="row"><h3>@ViewBag.Title</h3></div>
            <div class="row">
                <div class="col-12">
                    <form enctype="multipart/form-data" asp-action="EditRole" asp-controller="Administration" method="post">
                      
                        <div class="form-group">
                            <label asp-for="Id"></label>
                            <input asp-for="Id" class="form-control" disabled >
                            
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName"></label>
                            <input asp-for="RoleName" class="form-control" >
                            <span class="text-danger" asp-validation-for="RoleName"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-controller="Home" asp-action="Index">Cancel</a>
                    </form>

                </div>
            </div>
            <hr class="mt-4 mb-4"  />
            <div class="row"> <div class="col-12 bg-dark text-light mb-3 rounded" ><h2>Users</h2></div>  </div>
            <div class="row">
                <div class="col-12">
                    @if (!Model.Users.Any())
                    {
                        <h5> No users </h5>
                    }
                    else
                    {
                        
                        @foreach (var user in Model.Users)
                        {      
                                @user
                        }
                            
                    }

                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or Remove Users</a>
                </div>
            </div>
        </div>
    </div>