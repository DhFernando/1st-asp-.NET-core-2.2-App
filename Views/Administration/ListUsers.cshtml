@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Users List";
}
    <div class="row">
        <div class="col-12">
            <a asp-action="Register" asp-controller="Account" class="btn btn-primary mb-5">Register User</a>
        </div>
    </div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">UserName</th>
            <th scope="col">E-Mail</th>
            <th scope="col">City</th>
            <th scope="col">Adction</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.Id
                </td>
                <td> @user.UserName</td>
                <td> @user.Email</td>
                <td> @user.City</td>
                <td>

                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Delete" asp-action="Edit" asp-route-id="@user.Id">Delete</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>


