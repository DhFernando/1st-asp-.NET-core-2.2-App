@model List<UserRoleViewModel>

@{
    ViewBag.Title = "Add  or Remove Users form Role";
    var roleId = ViewBag.roleId;
}

<form asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@ViewBag.role.Id" method="post">
    <div class="row">
        <div class="col-12">
            <h3>Add  or Remove Users form <span class="text-secondary"> @ViewBag.role.Name </h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12">
            @for (int i = 0; i < Model.Count; i++)
            {
                <ul class="">

                    <li>
                        <input asp-for="@Model[i].UserId" hidden />
                        <input asp-for="@Model[i].UserName" hidden />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label>
                            @Model[i].UserName
                        </label>
                    </li>
                </ul>
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12">
            <button class="btn btn-success">Update</button>
            <a asp-action="EditRole" asp-route-id="@ViewBag.role.Id" class="btn btn-primary"> Cancel</a>
        </div>
    </div>
</form>