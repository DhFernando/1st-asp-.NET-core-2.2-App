@model CreateRoleViewModel;

@{
    ViewBag.Title = "Crate Role";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <h3>@ViewBag.Title</h3>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <form enctype="multipart/form-data" asp-action="CreateRole" asp-controller="Administration" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <input asp-for="RoleName" class="form-control" placeholder="Employee E-Mail">
                        <span class="text-danger" asp-validation-for="RoleName"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>