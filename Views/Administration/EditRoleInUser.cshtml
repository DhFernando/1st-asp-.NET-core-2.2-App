@model List<UserRoleViewModel>

@{
    ViewBag.Title = "Add  or Remove Users form Role";
    
}

<form asp-action="EditRoleInUser" asp-controller="Administration" asp-route-userId="@ViewBag.User.Id" method="post">
    <div class="row">
        <div class="col-12">
            <h3>Add  or Remove Roles form <span class="text-secondary"> @ViewBag.User </h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12">
            @for (int i = 0; i < Model.Count; i++)
            {
                <ul class="">

                    <li>
                        <input asp-for="@Model[i].RoleId" hidden />
                        <input asp-for="@Model[i].RoleName" hidden />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label>
                            @Model[i].RoleName
                        </label>- <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@Model[i].RoleId" class="btn btn-sm btn-primary">Go to  </a>
                    </li>
                </ul>
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12">
            <button class="btn btn-success">Update</button>
            
        </div>
    </div>
</form>