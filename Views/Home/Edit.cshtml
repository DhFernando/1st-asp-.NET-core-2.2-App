@model EmployeeEditViewModel


@{
    ViewBag.Title = "Edit Employee";
    var PhotoPath = "~/Images/"+Model.ExistingPhotoPath ?? "no-image";
}

    <form enctype="multipart/form-data" asp-action="Edit" asp-controller="Home" method="post">
        <input asp-for="Id" hidden />
        <input asp-for="ExistingPhotoPath" hidden/>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Employee Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="E -Mail">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Department"></label>
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-control"></select>
        </div>
        <div class="form-group">
            <label>Select Your  photo</label>
            <input asp-for="PhotoPath" class="form-control ">
        </div>
        @Model.PhotoPath
        <img src="@PhotoPath" style="height:150px" asp-append-version="true" />


        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Home" asp-action="Index">Cancel</a>
    </form>



